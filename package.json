{
  "name": "webapp",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:client": "vite",
    "dev:worker": "wrangler dev dist/worker/index.js --local --port 8787",
    "build:client": "vite build",
    "build:worker": "esbuild src/worker/index.ts --bundle --format=esm --outfile=dist/worker/index.js --external:__STATIC_CONTENT_MANIFEST",
    "build": "npm run build:worker && npm run build:client",
    "deploy": "npm run build && wrangler pages deploy dist/public --project-name webapp",
    "db:create": "wrangler d1 create webapp-production",
    "db:migrate:local": "wrangler d1 migrations apply webapp-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply webapp-production",
    "db:console:local": "wrangler d1 execute webapp-production --local --command",
    "db:console:prod": "wrangler d1 execute webapp-production --command"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "bcryptjs": "^3.0.3",
    "hono": "^4.11.2",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251225.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "esbuild": "^0.24.2",
    "typescript": "^5.7.2",
    "vite": "^6.4.1",
    "wrangler": "^4.4.0"
  }
}
